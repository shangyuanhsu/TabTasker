{
    "manifest_version": 3,
    "name": "TabTasker | 頁籤追蹤 ",
    "version": "1.0",
    "description": "A Chrome extension for managing page-specific notes and tasks.",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}